{
  "name": "dynamodb-scan-vs-query-benchmark",
  "version": "1.0.0",
  "description": "DynamoDB Scan vs Query performance benchmark using CDK",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "deploy": "cdk deploy --require-approval never",
    "destroy": "cdk destroy --force",
    "generate-local": "tsx scripts/generate-products-local.ts",
    "test-scan": "aws lambda invoke --function-name BenchmarkStack-TestScanFunction /dev/null",
    "test-query": "aws lambda invoke --function-name BenchmarkStack-TestQueryFunction /dev/null",
    "show-logs-scan": "aws logs tail /aws/lambda/BenchmarkStack-TestScanFunction --since 5m",
    "show-logs-query": "aws logs tail /aws/lambda/BenchmarkStack-TestQueryFunction --since 5m"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "aws-cdk": "^2.170.0",
    "aws-cdk-lib": "^2.170.0",
    "constructs": "^10.3.0",
    "esbuild": "^0.24.0",
    "tsx": "^4.19.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.700.0",
    "@aws-sdk/lib-dynamodb": "^3.700.0",
    "@types/aws-lambda": "^8.10.145"
  }
}
